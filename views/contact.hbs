<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/{{style}}">
  <title>Document</title>
</head>

<body class="color0 text-gray-100 px-8 py-12 overflow-hidden ">
    <div class="flex mb-4 "><div class="xl:w-1/2 h-12 "><img class="hidden xl:block"src="Extra2.png" alt=""></div>
    <div class="sm:w-full md:w-1/3  p-5 girounded flex-1 backgroundbox">
      <form action="/contact" method="post"></form>
      <div>
        <span class="uppercase text-sm text-gray-600 font-bold">Full Name</span>
        <input id="person" name="person" class="form-control w-full bg-gray-300 text-gray-900 mt-1 p-2 rounded-lg focus:outline-none focus:shadow-outline"
          type="text" placeholder="">
      </div>
      <div class="mt-4">
        <span class="uppercase text-sm text-gray-600 font-bold">Phone No</span>
        <input id="phone" name="phone" class="w-full form-control bg-gray-300 text-gray-900 mt-1 p-2 rounded-lg focus:outline-none focus:shadow-outline"
          type="text">
      </div>
       <div class="mt-4">
        <span class="uppercase text-sm text-gray-600 font-bold">Area</span>
        <input id="area" name="area" class="w-full form-control bg-gray-300 text-gray-900 mt-1 p-2 rounded-lg focus:outline-none focus:shadow-outline"
          type="text">
      </div>
      <div class="mt-4">
        <span class="uppercase text-sm text-gray-600 font-bold">Location</span>

            <p>
                latitude: <span id="latitude"></span>&deg;<br>
                longitude: <span id="longitude"></span>&deg;
            </p>
      </div>
  
      <div class="mt-4">
        <span class="uppercase text-sm text-gray-600 font-bold">Problem</span>
        <textarea id="problem" name="problem"
          class="w-full h-32 bg-gray-300 text-gray-900 mt-1 p-2 rounded-lg focus:outline-none focus:shadow-outline"></textarea>
      </div>
      <div class="mt-4">
        <button id="submit" type="submit" name="button"
          class="btn btn-primary uppercase text-sm font-bold tracking-wide bg-indigo-500 text-gray-100 p-3 rounded-lg w-100  focus:outline-none focus:shadow-outline">
          Send Message
        </button>
      </form>
      </div>
    </div>
  </div>
</div>
</body>
<script>
        let lat, lon;
        



        if ("geolocation" in navigator) {
            console.log("Geo is available");
            navigator.geolocation.getCurrentPosition(async position => {
                const name = document.getElementById("person").value;
                lat = position.coords.latitude;
                lon = position.coords.longitude;
                document.getElementById('latitude').textContent = lat;
                document.getElementById('longitude').textContent = lon;
            });
        } else {
            console.log("no geo")
        }

    </script>
</html>